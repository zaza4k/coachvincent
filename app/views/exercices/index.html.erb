<h1>Liste des exercices</h1>

<table>
  <tr>
    <th>Titre</th>
    <th>Exercice</th>
    <th>Muscles</th>
    <th>Conseils</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @exercices.each do |exercice| %>
  <tr>
    <td><%= exercice.title %></td>
    <td><%= exercice.description %></td>
    <td><%= exercice.muscles %></td>
    <td><%= exercice.conseils %></td>
    <td><%= link_to 'Montrer', exercice %></td>
    <td><%= link_to 'Editer', edit_exercice_path(exercice) %></td>
    <td><%= link_to 'Supprimer', exercice, method: :delete, data: { confirm: 'Confirmer la suppression ?' } %></td>
  </tr>
<% end %>
</table>

