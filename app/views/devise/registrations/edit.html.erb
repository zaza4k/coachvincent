<h4>Je veux modifier les informations de mon compte</h4>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :multipart => true }) do |f| %>
  <%= devise_error_messages! %>

  <div>
  <p>
    <%= image_tag current_admin.avatar.preview.url %></p>
    <small>Ajouter ou modifier la photo de profil</small>
  <%= f.file_field :avatar %>
  <%= f.hidden_field :avatar_cache %>

  </div>

  <div>
    <label>Votre adresse email</label>
  <%= f.text_field :email %></div>
  

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>En attente de confirmation pour : <%= resource.unconfirmed_email %></div>
  <% end %>

  <div>
    <label>Veuillez confirmer le mot de passe actuel</label>
  <%= f.password_field :current_password %></div>

  <div>
    <label>Nouveau mot de passe</label>
  <%= f.password_field :password, :autocomplete => "off" %></div>

  <div>
    <label>Veuillez confirmer le nouveau mot de passe</label>
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Mettre à jour mon compte", :class => 'button primary large expand' %></div>
<% end %>
<div class="row">
  <div class="large-12 large-centered columns text-center">
    <h5>Envie d'aller voir ailleurs ?</h5>
    <p>
       Attention ! Les données du compte seront définitivement supprimées.<%= button_to "Je vous quitte !", registration_path(resource_name), :data => { :confirm => "Êtes-vous sûr ?" }, :method => :delete, :class => 'button alert expand large' %>
    </p>
  </div>
</div>


<%= link_to "Revenir en arrière", :back, :class => 'button secondary small' %>
